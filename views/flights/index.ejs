<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>FlightNo</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(t) { %>
      <tr>
        <td><%= t.airline %></td>
        <td><%= t.airport %></td>
        <td><%= t.flightNo %></td>
        <td><a href="/flights/<%= t._id %>">Flight Details</a></td>
      </tr>
      <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>